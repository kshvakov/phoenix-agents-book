{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {{- range .Sites -}}
    {{- $site := . -}}
    {{- range $site.AllPages -}}
      {{- if not .Sitemap.Disable -}}
  <url>
    <loc>{{ .Permalink }}</loc>
    {{- $lastmod := or .Params.lastmod .Lastmod .Date -}}
    {{- with $lastmod -}}
    <lastmod>{{ (time.AsTime .).Format "2006-01-02T15:04:05Z07:00" }}</lastmod>
    {{- end -}}
        {{- with .Sitemap.ChangeFreq -}}
    <changefreq>{{ . }}</changefreq>
        {{- end -}}
        {{- with .Sitemap.Priority -}}
    <priority>{{ . }}</priority>
        {{- end -}}
  </url>
      {{- end -}}
    {{- end -}}
  {{- end -}}
</urlset>

